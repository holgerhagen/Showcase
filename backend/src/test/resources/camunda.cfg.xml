<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="processEngineConfiguration"
          class="org.camunda.bpm.engine.impl.cfg.StandaloneInMemProcessEngineConfiguration">
        <!-- Database configurations -->
        <property name="databaseSchemaUpdate" value="true"/>
    </bean>
    
    <bean id="shipmentOrderCompletedSentry" class="org.educama.shipment.cmmn.sentries.ShipmentOrderCompletedSentry"></bean>
    <bean id="shipmentRepository" class="org.educama.shipment.casemodel.mock.ShipmentRepositoryMock"></bean>

</beans>